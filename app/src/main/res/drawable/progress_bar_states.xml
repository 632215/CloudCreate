<?xml version="1.0" encoding="utf-8"?><!-- 层叠 -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="2dp" />

            <gradient
                android:angle="270"
                android:centerColor="@color/title_bg"
                android:endColor="@color/title_bg"
                android:startColor="@color/title_bg" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="2dp" />

                <gradient
                    android:centerColor="@color/colorAccent"
                    android:endColor="@color/color_progress"
                    android:startColor="@color/color_white" />
            </shape>
        </clip>
    </item>

</layer-list>