<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/dp_15"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:id="@+id/rl_charge"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tx_charge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:drawablePadding="@dimen/dp_6"
                android:drawableTop="@mipmap/icon_my_package_charge"
                android:text="@string/activity_my_package_charge"
                android:textColor="@color/activity_my_package_text1"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tx_charge_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tx_charge"
                android:layout_centerHorizontal="true"
                android:text="@string/activity_my_package_charge"
                android:textColor="@color/activity_my_package_text1"
                android:textSize="@dimen/sp_14"
                tools:text="ï¿¥0.00" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tx_recharge"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dp_6"
            android:drawableTop="@mipmap/icon_my_package_recharge"
            android:gravity="center"
            android:text="@string/activity_my_package_recharge"
            android:textColor="@color/activity_my_package_text1"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tx_card"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dp_6"
            android:drawableTop="@mipmap/icon_my_package_card"
            android:gravity="center"
            android:text="@string/activity_my_package_card"
            android:textColor="@color/activity_my_package_text1"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

    <TextView
        android:id="@+id/tx_service"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp_5"
        android:paddingStart="@dimen/dp_15"
        android:paddingTop="@dimen/dp_5"
        android:text="@string/activity_my_package_service"
        android:textColor="@color/activity_my_package_text1"
        android:textSize="@dimen/sp_14"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/dp_15"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tx_service">

        <TextView
            android:id="@+id/tx_transfer"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dp_6"
            android:drawableTop="@mipmap/icon_my_package_transfer"
            android:gravity="center"
            android:text="@string/activity_my_package_transfer"
            android:textColor="@color/activity_my_package_text1"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tx_receivables"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dp_6"
            android:drawableTop="@mipmap/icon_my_package_receivables"
            android:gravity="center"
            android:text="@string/activity_my_package_receivables"
            android:textColor="@color/activity_my_package_text1"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dp_6"
            android:gravity="center"
            android:text="@string/activity_my_package_charge"
            android:textColor="@color/activity_my_package_text1"
            android:textSize="@dimen/sp_14"
            android:visibility="invisible" />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>