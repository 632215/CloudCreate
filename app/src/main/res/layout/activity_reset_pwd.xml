<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white">

    <TextView
        android:id="@+id/tx_user_tips"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_25"
        android:gravity="left"
        android:text="@string/activity_reset_pwd_user"
        android:textColor="@color/activity_reset_pwd_text1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.7" />

    <EditText
        android:id="@+id/et_name"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_25"
        android:textSize="@dimen/sp_13"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@null"
        android:hint="@string/activity_reset_pwd_user_num"
        android:textColorHint="@color/activity_reset_pwd_text2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tx_user_tips"
        app:layout_constraintWidth_percent="0.7" />

    <TextView
        android:id="@+id/tx_line_name"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_0_5"
        android:layout_marginTop="@dimen/dp_2"
        android:background="@color/activity_reset_pwd_text1"
        app:layout_constraintEnd_toEndOf="@+id/et_name"
        app:layout_constraintStart_toStartOf="@+id/et_name"
        app:layout_constraintTop_toBottomOf="@+id/et_name" />

    <TextView
        android:id="@+id/tx_name_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="left"
        android:text="@string/activity_reset_pwd_user_num_hint"
        android:textColor="@color/activity_reset_pwd_text3"
        android:textSize="@dimen/sp_12"
        app:layout_constraintStart_toStartOf="@+id/et_name"
        app:layout_constraintTop_toBottomOf="@+id/et_name" />

    <ImageView
        android:id="@+id/img_sure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_25"
        android:src="@mipmap/icon_reset_pwd_sure_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tx_name_tips"
        app:srcCompat="@mipmap/icon_reset_pwd_sure_bg" />

    <TextView
        android:id="@+id/tx_sure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activity_reset_pwd_sure"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp_16"
        app:layout_constraintBottom_toBottomOf="@+id/img_sure"
        app:layout_constraintEnd_toEndOf="@+id/img_sure"
        app:layout_constraintStart_toStartOf="@+id/img_sure"
        app:layout_constraintTop_toTopOf="@+id/img_sure" />

</android.support.constraint.ConstraintLayout>