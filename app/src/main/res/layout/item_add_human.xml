<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/dp_10">

    <ImageView
        android:id="@+id/img_head"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:src="@mipmap/ic_launcher_round"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/tx_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_15"
        android:textColor="@color/title_bg"
        app:layout_constraintStart_toEndOf="@+id/img_head"
        app:layout_constraintTop_toTopOf="@+id/img_head"
        tools:text="漳卅" />

    <TextView
        android:id="@+id/tx_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/activity_reset_pwd_text1"
        app:layout_constraintStart_toEndOf="@+id/tx_name"
        app:layout_constraintTop_toTopOf="@+id/tx_name"
        tools:text="(1242165316)" />

    <TextView
        android:id="@+id/tx_sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/title_bg"
        android:drawableLeft="@mipmap/icon_add_male"
        android:drawablePadding="@dimen/dp_2"
        android:padding="@dimen/dp_1"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_8"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/tx_skill"
        app:layout_constraintStart_toStartOf="@+id/tx_name"
        app:layout_constraintTop_toBottomOf="@+id/tx_name"
        tools:text="30" />

    <TextView
        android:id="@+id/tx_skill"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:textColor="@color/activity_reset_pwd_text1"
        android:textSize="@dimen/dp_12"
        app:layout_constraintBottom_toBottomOf="@+id/img_head"
        app:layout_constraintStart_toStartOf="@+id/tx_sex"
        tools:text="游戏铸币" />


</android.support.constraint.ConstraintLayout>