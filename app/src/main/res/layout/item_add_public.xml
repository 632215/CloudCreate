<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/dp_10">

    <ImageView
        android:id="@+id/img_head"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:src="@mipmap/ic_launcher_round"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/tx_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:textColor="@color/fragment_msg_text1"
        app:layout_constraintStart_toEndOf="@+id/img_head"
        app:layout_constraintTop_toTopOf="@+id/img_head"
        tools:text="漳卅" />

    <TextView
        android:id="@+id/tx_skill"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:textColor="@color/activity_reset_pwd_text1"
        android:textSize="@dimen/dp_12"
        app:layout_constraintBottom_toBottomOf="@+id/img_head"
        app:layout_constraintStart_toStartOf="@+id/tx_name"
        tools:text="游戏铸币" />

</android.support.constraint.ConstraintLayout>