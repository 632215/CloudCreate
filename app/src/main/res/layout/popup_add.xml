<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="end"
    android:layout_marginEnd="@dimen/dp_15">

    <LinearLayout
        android:layout_width="@dimen/dp_180"
        android:layout_height="@dimen/dp_260"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp_10"
        android:paddingTop="@dimen/dp_30"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/cl_add_group"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/img_add_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_15"
                android:src="@mipmap/icon_popu_group"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tx_add_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/img_add_group"
                android:layout_alignTop="@+id/img_add_group"
                android:layout_marginStart="@dimen/dp_60"
                android:layout_toRightOf="@+id/img_add_group"
                android:gravity="center_vertical"
                android:text="@string/popu_add_group"
                android:textColor="@color/fragment_msg_text1"
                app:layout_constraintBottom_toBottomOf="@+id/img_add_group"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/img_add_group" />
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/cl_add_friend"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_15"
                android:src="@mipmap/icon_popu_friend"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/cl_add_friend"
                android:layout_alignTop="@+id/cl_add_friend"
                android:layout_marginStart="@dimen/dp_60"
                android:layout_toRightOf="@+id/cl_add_friend"
                android:gravity="center_vertical"
                android:text="@string/popu_add_friend"
                android:textColor="@color/fragment_msg_text1"
                app:layout_constraintBottom_toBottomOf="@+id/cl_add_friend"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/cl_add_friend" />
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/cl_create_group"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_15"
                android:src="@mipmap/icon_popu_create_group"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/cl_create_group"
                android:layout_alignTop="@+id/cl_create_group"
                android:layout_marginStart="@dimen/dp_60"
                android:layout_toRightOf="@+id/cl_create_group"
                android:gravity="center_vertical"
                android:text="@string/popu_create_group"
                android:textColor="@color/fragment_msg_text1"
                app:layout_constraintBottom_toBottomOf="@+id/cl_create_group"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/cl_create_group" />
        </android.support.constraint.ConstraintLayout>


        <android.support.constraint.ConstraintLayout
            android:id="@+id/cl_scan"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_15"
                android:src="@mipmap/icon_popu_scan"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/cl_scan"
                android:layout_alignTop="@+id/cl_scan"
                android:layout_marginStart="@dimen/dp_60"
                android:layout_toRightOf="@+id/cl_scan"
                android:gravity="center_vertical"
                android:text="@string/popu_scan"
                android:textColor="@color/fragment_msg_text1"
                app:layout_constraintBottom_toBottomOf="@+id/cl_scan"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/cl_scan" />
        </android.support.constraint.ConstraintLayout>


        <android.support.constraint.ConstraintLayout
            android:id="@+id/cl_pay"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_15"
                android:src="@mipmap/icon_popu_pay"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/cl_pay"
                android:layout_alignTop="@+id/cl_pay"
                android:layout_marginStart="@dimen/dp_60"
                android:layout_toRightOf="@+id/cl_pay"
                android:gravity="center_vertical"
                android:text="@string/popu_pay"
                android:textColor="@color/fragment_msg_text1"
                app:layout_constraintBottom_toBottomOf="@+id/cl_pay"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/cl_pay" />
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/cl_help"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_15"
                android:src="@mipmap/icon_popu_help"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/cl_help"
                android:layout_alignTop="@+id/cl_help"
                android:layout_marginStart="@dimen/dp_60"
                android:layout_toRightOf="@+id/cl_help"
                android:gravity="center_vertical"
                android:text="@string/popu_help"
                android:textColor="@color/fragment_msg_text1"
                app:layout_constraintBottom_toBottomOf="@+id/cl_help"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/cl_help" />
        </android.support.constraint.ConstraintLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
